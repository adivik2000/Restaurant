<% form_for(@dish) do |f| %>
	<%= f.hidden_field :menu_id %><br />  
<div class="field">
	<%= f.label :name %><br />
	<%= f.text_field :name %><br />  
</div>
<div class="field">
	<%= f.label :description %><br />
	<%= f.text_field :description %><br />  
</div>
<div class="field">
	<%= f.label :price %><br />
	<%= f.text_field :price_parse %><br />
</div>
<div class="add_new" id="add_new_child_dish_single">
<%= link_to "Add subsection", :controller => 'admin/dishes', :action => 'new', :parent_id => @dish.id %>
</div>
<div class="update_button">
	<%= f.submit "Save" %>
</div>
<% end %>

