<% form_for @menu_item do |f| -%>
<div class="field">
<%= f.hidden_field :navigation_menu_id %>
<%= f.label :name %><br />
<%= f.text_field :name %>
</div>
<div class="field">
<%= f.label :target_page %><br />
<%= f.select 'slug', options_from_collection_for_select(@links, 'slug', 'name') %>    
</div>
<div class="update_button">
<%= f.submit "Save" %>
</div>
<% end -%>
