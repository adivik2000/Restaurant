<%= include_yui_editor_if_used %>
<% content_for :header_tag do %>
<h1>Edit Offer</h1>
<% end %>

<div class="content_unit">
	<div class="heading">
		<h3 class="heading">Edit <%= @offer.title %></h3>
		<p class="help_text">Enter the new offer details below and click update to save</p>
	</div>	

<div class="user_input">
	<% form_for(@offer, :html => { :multipart => true }) do |f| %>
	<div class="field">
		<%= f.label :Title %><br />
		<%= f.text_field :title %><br />  
	</div>
	<div class="field">
		<%= f.label :Description %><br />
		<%= f.text_field :description %><br />
	</div>
	<div class="photo"> 
    <%= f.label :File %><br />
	<%= f.file_field :photo %>
	</div>
	<div class="photo"> 
    <%= f.label :Offer_conditions %><br />
	<%= f.text_area :conditions, :class => 'rich_text_editor', :style => 'width: 700px; height: 200px' %><br />  
	</div>

	<br />
	<div class="actions update">
		<%= f.submit "Update", :class => 'wide' %>
	</div>
	<% end %>
</div>