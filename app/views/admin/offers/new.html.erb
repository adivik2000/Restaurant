<%= include_yui_editor_if_used %>
<h1>Add new offer</h1>
<div class="content_unit">
	<% form_for(@offer, :html => { :multipart => true }) do |f| %>
	<div class="field">
		<%= f.label :Title %><br />
		<%= f.text_field :title %><br />  
	</div>
	<div class="field">
		<%= f.label :Description %><br />
		<%= f.text_field :description %><br />  
	</div>
	<div class="photo"> 
    <%= f.label :File %><br />
	<%= f.file_field :photo %>
	</div>
	<div class="photo"> 
    <%= f.label :Offer_conditions %><br />
	<%= f.text_area :conditions, :class => 'rich_text_editor', :style => 'width: 700px; height: 200px' %><br />  
	</div>
	<br />
	<div class="update_button">
		<%= f.submit "Save", :class => 'wide' %>
	</div>
	<% end %>
</div>