<% content_for :header_tag do %>
<h1>Edit Wine</h1>
<% end %>

<div class="content_unit">
	<div class="heading">
		<h3 class="heading">Edit <%= @wine.name %></h3>
		<p class="help_text">Change the details below and click update to save</p>
	</div>	

	<div class="user_input">
		<% form_for(@wine) do |f| %>
		<div class="hidden_field">
			<%= f.label :Menu %><br />
			<%= f.text_field :menu_id %><br />  
		</div>
		<div class="field">
			<%= f.label :name %><br />
			<%= f.text_field :name %><br />  
		</div>
		<div class="field">
			<%= f.label :category %><br />
			<%= f.select :category, options_for_select(Wine::CATEGORIES, @wine.category) %><br />
		</div>
		<div class="field">
			<%= f.label :price %><br />
			<%= f.text_field :price %><br />  
		</div>
		<div class="field">
			<%= f.label :small %><br />
			<%= f.text_field :small %><br />  
		</div>
		<div class="field">
			<%= f.label :large %><br />
			<%= f.text_field :large %><br />  
		</div>
		<div class="field">
			<%= f.label :carafe %><br />
			<%= f.text_field :carafe %><br />  
		</div><br />
		<div class="actions update">
			<%= f.submit "Update" %>
		</div>
		<% end %>
	</div>
</div>