<% content_for :header_tag do %>
<h1>Add new gallery</h1>
<% end %>

<div class="content_unit">
	<div class="heading">
		<h3 class="heading">Add new gallery</h3>
		<p class="help_text">Choose a name for your gallery and click save to start adding photos</p>
	</div>	

	<div class="user_input">
		<% form_for(@gallery) do |f| %>
		<div class="field">
			<%= f.label :Name %><br />
			<%= f.text_field :name %><br />  
		</div>
		<div class="actions save">
			<%= f.submit "Save" %>
		</div>
		<% end %>
	</div>
</div>