<%= include_yui_editor_if_used %>

<h1>New page</h1>

<div class="user_input">
	<% form_for(@page) do |f| %>
	<div class="field">
		<%= f.label :page_name %><br />
		<%= f.text_field :name %><br />  
	</div>
	<div class="field">
		<%= f.label :Content %><br />
		<%= f.text_area :content, :class => 'rich_text_editor', :style => 'width: 800px' %>
	</div>
	<div class="actions update">
		<%= f.submit "Update" %>
	</div>
	<% end %>
</div>