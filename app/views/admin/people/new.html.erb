<h1>Add new person</h1>
<div class="content_unit">
	<div class="user_input index_items">
		<% form_for(@person, :html => { :multipart => true }) do |f| %>
		<div class="field">
			<%= f.label :Name %><br />
			<%= f.text_field :name %><br />  
		</div>
		<div class="field">
			<%= f.label :Role %><br />
			<%= f.text_field :role %><br />  
		</div>
		<div class="field">
			<%= f.label :Profile %><br />
			<%= f.text_area :profile %><br />  
		</div>
		<div class="photo"> 
	    <%= f.label :File %><br />
		<%= f.file_field :photo %>
		</div>
		<div class="update_button">
			<%= f.submit "Save" %>
		</div>
		<% end %>
	</div>
</div>
