<% content_for :sub_menu do %>
<div id="menu_menu">
		<ul>
			<li class="selected">All</li>
			<% @menus.each do |menu| %>
			<li><%= link_to menu.name, :controller => 'menus', :action => 'show', :id => menu.id %></li>
			<% end %>
		</ul>
</div>
<% end %>
<div id="menu_content">
<% @menus.each do |@menu| %>
	<% if @menu.menu_type == 'food' %>
		<%= render 'menus/food_menu_show' %>
	<% else %>
		<%= render 'menus/wine_menu_show' %>
	<% end %>
<% end %>
</div>

