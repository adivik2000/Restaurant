<div id="menu_image">
	<%= image_tag "thegrill/menus/#{@menu.name}_thumb.png" %>
</div>
<ul id="menu_menu">
	<% @menus.each do |menu| %>
	<%= menu_item(menu) %>
	<% end %>
</ul>
<div id="menu_content">
	<% @wine_categories.each do |cat| %>
	<% select_all_wines(cat) %>
	<div class="wine_headings">
		<div class="wine_left">
			<div class="wine_name">
				<%= cat.category.titleize %>
			</div>
		</div>
		<div class="wine_right">
			<div class="wine_price wine_right_item">
				Bottle
			</div>
			<div class="wine_small wine_right_item">
				Small Glass
			</div>
			<div class="wine_large wine_right_item">
				Large Glass
			</div>
		</div>
	</div>
	<% @wines.each do |wine| %>
	<div class="wine">
		<div class="wine_left">
			<div class="wine_name">
				<%= wine.name %>
			</div>
		</div>
		<div class="dot_dot_dot_wine">
		</div>
		<div class="wine_right">
			<div class="wine_price wine_right_item">
				<%= pound_amount(wine.price) %>
			</div>
			<div class="wine_small wine_right_item">
				<%= pound_amount(wine.small) %>
			</div>
			<div class="wine_large wine_right_item">
				<%= pound_amount(wine.large) %>
			</div>
		</div>
	</div>
	<% end %>
	<% end %>
</div>