<% content_for :head do %>
	<link rel="stylesheet" type="text/css" href="../style-projects-jquery.css" />    
	<%= javascript_include_tag 'jquery-lightbox-0.5/js/jquery.lightbox-0.5' %>	
    <link rel="stylesheet" type="text/css" href="css/jquery.lightbox-0.5.css" media="screen" />
    <script type="text/javascript">
    $(function() {
        $('#gallery a').lightBox();
    });
    </script>
<% end %>
<div id="gallery">
    <ul>
		<% @photos.each do |photo| %>
			<li>
				<%= link_to (image_tag photo.photo.url(:thumbnail)), photo.photo.url %>
			</li>
		<% end %>
	
	</ul>
</div>