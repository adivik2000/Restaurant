<% content_for :sub_menu do %>
<div id="people_menu">
	<ul>
		<li class="selected">All</li>
		<% @people.each do |person| %>
		<li><%= link_to person.name, :controller => 'people', :action => 'show', :id => person.id %></li>
		<% end %>
	</ul>

</div>
<% end %>
<div id="people_content">
<div id="people_header">
<h1>Our staff</h1>
</div>
<% @people.each do |person| %>
<div class="people_index_item">
	<div class="people_image_index">
		<%= image_tag person.photo.url(:person_thumb) %>
	</div>
	<div class= "people_right_index">
		<div class="people_name_index">
			<h3><%= link_to person.name, :action => 'show', :id => person.id %></h3>
		</div>
		<div class="people_role_index">
			<%= person.role %>
		</div>
		<div class="people_profile_index">
			<%= truncate(person.profile, :length => 400, :omission => '...') %>
		</div>
	</div>
</div>
<% end %>
</div>
